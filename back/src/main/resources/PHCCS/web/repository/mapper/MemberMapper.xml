<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PHCCS.web.repository.mapper.MemberMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into member(email, pwd, name, nick_name, pho_no, created, role)
        values (#{email}, #{pwd}, #{name}, #{nickName}, #{phoNo}, #{created}, #{role})
    </insert>
    
    <select id="findMemberByEmail" resultType="member">
        select *
        from member
        where email = #{email}
    </select>

</mapper>
